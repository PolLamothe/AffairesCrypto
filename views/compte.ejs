<!DOCTYPE html>
<html>
<head>
    <meta charset='utf-8'>
    <meta http-equiv='X-UA-Compatible' content='IE=edge'>
    <title>Page Title</title>
    <meta name='viewport' content='width=device-width, initial-scale=1'>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.4/jquery.js"></script>
    <link href="/css/mutual.css" rel="stylesheet">
    <link href="/css/compte.css" rel="stylesheet">
</head>
<body>
    <%- include('./templates/header.ejs') %>
    <div id="compte_profileDiv">
        <img src="/assets/default.webp" id="compte_profilePicture" style="grid-column: 1;grid-row: 1;">
        <div style="grid-column: 2/4;grid-row: 1/2;" id="compte_PseudoDiv">
            <div style="display: flex;">
                <p id="compte_pseudo"><%= pseudo %></p>
                <p id="compte_rate"><%= rate %>/5</p>
            </div>
            <div id="compte_emailVerificationDiv">
                <% if(emailVerified){ %>
                        <p id="compte_emailVerified">Email Vérifié</p>
                        <img src="/assets/img/certified.png" id="compte_verificationStatePicture">
                    <% }else{ %>
                        <p id="compte_emailVerified">Email Non Vérifié</p>
                        <img src="/assets/img/redCross.png" id="compte_verificationStatePicture">
                    <% } %>
            </div>
        </div>
        <div style="grid-column: 5;grid-row: 1/3;" id="compte_emailAndPhoneDIV">
            <div class="compte_infoDiv">
                <p class="compte_infoText">Email:</p>
                <p class="compte_infoState">Privé</p>
            </div>
            <div class="compte_infoDiv">
                <p class="compte_infoText">Téléphone:</p>
                <p class="compte_infoState">Privé</p>
            </div>
        </div>
        <p id="compte_saleNumber" style="grid-column: 9;grid-row: 1;"><%= sell_number %> ventes</p>
        <button style="grid-column: 9;grid-row: 2;" id="compte_sendMessageButton">Envoyer un message</button>
    </div>
</body>
</html>